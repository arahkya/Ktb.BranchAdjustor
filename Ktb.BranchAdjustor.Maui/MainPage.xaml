<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ktb.BranchAdjustor.Maui.MainPage">

    <ContentPage.Resources>
        <Style x:Key="FileInfoLabelStyle" TargetType="Label">
            <Setter Property="Margin" Value="10" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
        </Style>
    </ContentPage.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*" />
            <ColumnDefinition Width="40*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*" />
            <RowDefinition Height="60*" />
        </Grid.RowDefinitions>

        <Grid x:Name="FileInfoPane" Padding="20" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*" />
                <ColumnDefinition Width="75*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Grid.Row="0" Style="{StaticResource FileInfoLabelStyle}" Text="File Name" VerticalTextAlignment="Center" />
            <Label Grid.Column="0" Grid.Row="1" Style="{StaticResource FileInfoLabelStyle}" Text="Worker Number" />
            <Label Grid.Column="0" Grid.Row="2" Style="{StaticResource FileInfoLabelStyle}" Text="Total Branch" />
            <Label Grid.Column="0" Grid.Row="3" Style="{StaticResource FileInfoLabelStyle}" Text="Branch Range" />
            <Label Grid.Column="0" Grid.Row="4" Style="{StaticResource FileInfoLabelStyle}" Text="Branch per Worker" />
            <Label Grid.Column="0" Grid.Row="5" Style="{StaticResource FileInfoLabelStyle}" Text="Dispute per Worker" />
            
            <Button Grid.Column="1" Grid.Row="0" Margin="10" Padding="5" Text="Select File" x:Name="SelectFileButton" />
            <Label Grid.Column="1" Grid.Row="1" Style="{StaticResource FileInfoLabelStyle}" Text="-" x:Name="WorkerNumberLabel" />
            <Label Grid.Column="1" Grid.Row="2" Style="{StaticResource FileInfoLabelStyle}" Text="-" x:Name="TotalBranchLabel" />
            <Label Grid.Column="1" Grid.Row="3" Style="{StaticResource FileInfoLabelStyle}" Text="-" x:Name="BranchRangeLabel" />
            <Label Grid.Column="1" Grid.Row="4" Style="{StaticResource FileInfoLabelStyle}" Text="-" x:Name="BranchPerWorkerLabel" />
            <Label Grid.Column="1" Grid.Row="5" Style="{StaticResource FileInfoLabelStyle}" Text="-" x:Name="DisputePerWorkerLabel" />

            <HorizontalStackLayout Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" Padding="10" BackgroundColor="White" Margin="0,10,0,0">
                <Button Text="Reload" />
                <Button Text="Auto Adjust" Margin="10,0" />
            </HorizontalStackLayout>
        </Grid>
        <ScrollView Grid.Column="0" Grid.Row="1">
            <ListView>

            </ListView>
        </ScrollView>
    </Grid>
</ContentPage>
