<?xml version="1.0" encoding="utf-8" ?>
<ContentView  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="CustomView"
             x:Class="Ktb.BranchAdjustor.Maui.Components.AdjustableBranchGridLabel">
    <ContentView.Content>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="10">
            <Button x:Name="MinusButton" Text="-" WidthRequest="10" BackgroundColor="Orange" FontSize="20" Padding="0" Clicked="OnMinusButtonClicked" />
            <Label x:Name="BranchLabel" TextColor="Blue" Padding="0,0,0,0" FontSize="15" Margin="10,0,10,0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
            <Button x:Name="PlusButton" Text="+" WidthRequest="10" BackgroundColor="Green" FontSize="20" TextColor="White" Padding="0"  Clicked="OnPlusButtonClicked" />
        </StackLayout>
    </ContentView.Content>
</ContentView>